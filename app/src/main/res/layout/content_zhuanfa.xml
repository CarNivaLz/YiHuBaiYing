<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/velet_red"></LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/open_rp_top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_back"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical">

                </ImageButton>

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:background="@color/dark_gold">

                </View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="11dp"
                    android:layout_gravity="center"
                    android:text="红包详情"
                    android:textColor="@color/dark_gold"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="转发红包"
                    android:textSize="29sp"
                    android:textColor="@color/dark_gold"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="中海左岸，十一国庆\n盛大开盘，回馈全城"
            android:textColor="@color/red"
            android:textSize="21sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/hongbao_image1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.4"></LinearLayout>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/hongbao_image2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.4"></LinearLayout>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/hongbao_image3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <com.hanks.lineheightedittext.LineHeightEditText
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="10dp"
            android:background="@drawable/comments_background"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="top"
            android:hint="请输入转发推荐语："
            android:textColorHint="@color/black_text2"
            android:padding="14dp"
            android:textSize="18sp"
            android:selectAllOnFocus="true"
            android:cursorVisible="false"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <Button
        android:id="@+id/zhuanfa_jump"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_background"
        android:text="转发"
        android:textColor="@color/dark_gold"
        android:textSize="18sp" />
</RelativeLayout>


</LinearLayout>